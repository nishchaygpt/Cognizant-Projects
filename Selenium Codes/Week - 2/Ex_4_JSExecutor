package selenium_week_2_nishchay;

import org.openqa.selenium.Alert;
import org.openqa.selenium.JavascriptExecutor;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;

public class Ex_4_JSExecutor {

	public static void main(String[] args) throws InterruptedException {
		// TODO Auto-generated method stub
		WebDriver driver = new ChromeDriver();
		driver.manage().window().maximize();
		
		driver.get("https://demoqa.com/alerts");
		
		//WebElement email = driver.findElement(By.id("email"));
		//email.sendKeys("helloworld@gmail.com");
		//
		//WebElement login = driver.findElement(By.id("u_0_5_Rm"));
		//login.click();
		
		JavascriptExecutor js = (JavascriptExecutor)driver;
		//js.executeScript("argument[0].click()",login);
		
		//js.executeScript("alert('hello world')");
	
		js.executeScript("window.scrollBy(0,400)");
		
		js.executeScript("document.getElementById('confirmButton').click();");
		
		Alert al = driver.switchTo().alert();
		Thread.sleep(3000);
		al.dismiss();
		
		
		
		
		
		
		
		
		
		
	}

}
