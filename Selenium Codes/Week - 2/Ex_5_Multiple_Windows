package selenium_week_2_nishchay;

import java.util.concurrent.TimeUnit;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import java.util.*;
import org.openqa.selenium.chrome.ChromeDriver;

public class Ex_5_Multiple_Windows {

	@SuppressWarnings("deprecation")
	public static void main(String[] args) throws InterruptedException {
		// TODO Auto-generated method stub
		WebDriver driver = new ChromeDriver();
		driver.manage().window().maximize();
		driver.get("https://www.nopcommerce.com/en/showcase");
		driver.manage().timeouts().implicitlyWait(10, TimeUnit.SECONDS);
		
		String currentWindow = driver.getWindowHandle();

		System.out.println("Current window title : " + driver.getTitle());
		System.out.println("Focus is on : " + driver.getCurrentUrl());

		WebElement volvoCars = driver.findElement(By.xpath("//img[@title='Volvo Cars Collection']"));
		volvoCars.click();

		Set<String> setWindows = driver.getWindowHandles();
		System.out.println("Number of windows opened : " + setWindows.size());

		for (String i : setWindows) {
			// System.out.println(i + " ");

			if (currentWindow.equals(i)) {
				System.out.println("You are still in the current window");
			} else {
				driver.switchTo().window(i);
				System.out.println("Current NEW Window Title : " + driver.getTitle());
				System.out.println("Current NEW Window URL : " + driver.getCurrentUrl());
				Thread.sleep(4000);
				driver.close();
			}

		}
		
		driver.switchTo().window(currentWindow);

		System.out.println("Previous window title : " + driver.getTitle());
		System.out.println("Previous Window Focus is on  : " + driver.getCurrentUrl());

	}

}
