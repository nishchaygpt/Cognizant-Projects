package selenium_week_1_nishchay;

import org.openqa.selenium.chrome.ChromeDriver;

public class Selenium_Practice_Exercise_2_1 {

	public static void main(String[] args) throws InterruptedException {
		// TODO Auto-generated method stub

		ChromeDriver driver = new ChromeDriver();
		driver.manage().window().maximize();
		driver.get("https://www.selenium.dev/downloads/");

		System.out.println("\n1st Website : Selenium Downloads Page");
		System.out.println("Title of 1st Navigation: " + driver.getTitle());
		System.out.println("URL of the 1st Navigation: " + driver.getCurrentUrl());

		Thread.sleep(5000);

		driver.navigate().to("https://www.selenium.dev/documentation/");
		System.out.println("\nTitle of 2nd Navigation: " + driver.getTitle());
		System.out.println("URL of the 2nd Navigation: " + driver.getCurrentUrl());

		Thread.sleep(5000);
		System.out.println("\nGoing back...");
		driver.navigate().back();

		Thread.sleep(5000);
		System.out.println("\nGoing forward...");
		driver.navigate().forward();


	}

}
