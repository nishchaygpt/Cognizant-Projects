package selenium_week_3_apache_poi;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.OutputStream;
import org.apache.poi.hssf.usermodel.HSSFWorkbook;
import org.apache.poi.ss.usermodel.Sheet;
import org.apache.poi.ss.usermodel.Cell;
import org.apache.poi.ss.usermodel.Row;
import org.apache.poi.ss.usermodel.Workbook;

public class Ex_1_WriteSheet {

	
	public static void main(String[] args) throws IOException {
		
		Workbook wb = new HSSFWorkbook(); //excel97 - xls format
		OutputStream fout = new FileOutputStream("sample.xls"); //sample.xls is not existing, it will be created in the project space only
		
		Sheet sheet1 = wb.createSheet("First");
		
		Row row = sheet1.createRow(2);
		Cell cell = row.createCell(5);
		
		System.out.println("New cell value created");
		
		cell.setCellValue("Nishchay");
		
		wb.write(fout);
		wb.close();
		
		
		

	}

}
