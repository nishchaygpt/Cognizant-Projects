package selenium_week_1_nishchay;

import java.util.concurrent.TimeUnit;

import org.openqa.selenium.By;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.support.ui.Select;

public class Ex3_UseList {

	@SuppressWarnings("deprecation")
	public static void main(String[] args) throws InterruptedException {
		// TODO Auto-generated method stub
		
		ChromeDriver driver = new ChromeDriver();
		// the above line is using 17 version of compiler
		
		driver.manage().window().maximize();
		driver.get("https://www.roboform.com/filling-test-all-fields");
		driver.manage().timeouts().implicitlyWait(5, TimeUnit.SECONDS);
		
		WebElement month = driver.findElement(By.name("66mm"));
		
		
		// 3 ways to access the element : index,visibleText,value
//		Thread.sleep(3000);
//		Select selectMonth = new Select(month);
//		selectMonth.selectByIndex(3);
//		
//		Thread.sleep(3000);
//		selectMonth.selectByVisibleText("Dec");
//		
//		Thread.sleep(3000);
//		selectMonth.selectByValue("5");
		
		month.click();
		month.sendKeys("Dec");
		month.click();

		//System.out.println("The selected option is : " + selectMonth.getFirstSelectedOption().getText());
		
	}

}
