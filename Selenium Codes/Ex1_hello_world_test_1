package selenium_week_1_nishchay;

import java.util.concurrent.TimeUnit;

import org.openqa.selenium.By;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;

public class Ex1_hello_world_test_1 {

	@SuppressWarnings("deprecation")
	public static void main(String[] args) {
		// TODO Auto-generated method stub
//		System.setProperty("webdriver.chrome.driver","C:\\Users\\2317858\\Downloads\\chromedriver-win32.zip\\chromedriver-win32\\chromedriver.exe");
		//the above line is using 1.7 version of compiler
		
		ChromeDriver driver = new ChromeDriver();
		//the above line is using 17 version of compiler
		driver.manage().window().maximize();
		driver.get("https://www.facebook.com/");
		driver.manage().timeouts().implicitlyWait(5,TimeUnit.SECONDS);
		
		System.out.println("Title of the web page is : " + driver.getTitle());
		
		WebElement email = driver.findElement(By.id("email"));
		email.sendKeys("helloworld12344@gmail.com");
		
//		WebElement password = driver.findElement(By.id("pass"));
//		password.sendKeys("nishchay");
//		
//		WebElement loginButton = driver.findElement(By.name("login"));
//		loginButton.click();
		
		WebElement forgotPassword = driver.findElement(By.linkText("Forgotten password?"));
		forgotPassword.click();
		
		WebElement newforgotPassword = driver.findElement(By.partialLinkText("Forgotten"));
		newforgotPassword.click();
		
		//driver.close();
		
		
		

	}

}
